<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="data.mapper.BoarPetMapper">

    <!-- 게시판의 전체 글 개수 조회 -->
    <select id="getTotalCount" resultType="int">
        select count(*) from board_pet
    </select>

    <!--가장 큰 게시글 번호 조회-->
    <select id="getMaxIdx" resultType="int">
        select ifnull(max(idx),0) from board
    </select>

    <!--게시글 등록-->
    <insert id="insertBoardPet" parameterType="BoardPetDto">
        insert into board_pet (myid,writer,subject,content)
        values (#{myid},#{writer},#{subject},#{content})

        <selectKey keyProperty="idx" resultType="int" order="AFTER">
            SELECT LAST_INSERT_ID()
        </selectKey>
    </insert>

</mapper>







